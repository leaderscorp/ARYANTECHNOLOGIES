    <data>
        <template id="new_invoice_report_template_iman_doc">
            <div class="header">
                <div class="row" >
                    <div name="left-upper-side" class="col-6" t-if="not pre_printed_report">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 140px;" alt="Logo"/>
                    </div>
<!--                    <div class="col-6 text-start">-->
<!--                        <img t-if="o.company_id.logo" t-att-src="'data:image/png;base64,%s' % to_text(company_id.logo)"-->
<!--                        style="max-height: 140px;"/>-->
<!--                        <img t-att-src="o.company_id.logo"  />-->
<!--                        <t t-debug="pdb"/>-->
<!--                    </div>-->
<!--                    <div class="col-6 text-end" style="margin-top:50px;">-->
<!--                        <span t-field="o.company_id.street"/>-->
<!--                    </div>-->
                </div>
            </div>
            <t t-call="web.external_layout" >
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                    <div class="container " style="margin-top:0px;">
                        <div class="row">
                            <div class="col-6">
                                <div>
                                    <t t-if="o and 'company_id' in o">
                                        <t t-set="company" t-value="o.company_id"/>
                                        <b>Date:</b>
                                        <span t-field="o.invoice_date"/>
                                        <br/>
                                        <b>Supplier Name:</b>
                                        <span t-field="company.name"/>
                                        <br/>
                                        <b><span t-if="o.move_type == 'out_invoice'">Invoice No:</span>
                                            <span t-else="">Bill No:</span></b>
                                        <span t-field="o.name"/>
                                        <br/>
                                        <b>Address:</b>
                                        <span t-field="company.street"/>
                                        <br/>
                                        <b>Telephone:</b>
                                        <span t-field="company.phone"/>
                                        <br/>
                                        <b>NTN:</b>
                                        <span t-field="company.vat"/>
                                        <br/>
                                        <b><span t-if="o.move_type == 'out_invoice'">Invoice Origin:</span>
                                            <span t-else="">Bill Origin:</span></b>
                                        <span t-field="o.invoice_origin"/>
                                        <br/>
                                        <b>Payment Ref:</b>
                                        <span t-field="o.payment_reference"/>
                                        <br/>
                                    </t>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-end">
                                    <b>Buyer's Name:</b>
                                    <span t-field="o.partner_id.name"/>
                                    <br/>
                                    <b>Buyer's Address:</b>
                                    <span t-field="o.partner_id.street"/>
                                    <br/>
                                    <b style="line-height: 1px;">Buyer's NTN:</b>
                                    <span t-field="o.partner_id.vat"/>
                                    <br/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-2">
                        <div class="page">


                            <t t-set="o" t-value="o.with_context(lang=lang)" />
                            <span t-if="o.move_type == 'out_invoice'"><h2 class="text-center" style="margin-bottom:30px;">Sales Invoice</h2></span>
                            <span t-if="o.move_type == 'in_invoice'"><h2 class="text-center" style="margin-bottom:30px;">Bill</h2></span>
                            <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
<!--class="table table-sm o_main_table table-borderless"-->
                                    <table   name="invoice_line_table">
                                        <thead>
                                            <tr>
                                                <th name="th_sno" class="text-start" style="width:5%;" ><span>S.NO</span></th>
                                                <th name="th_description" class="text-center" style="width:30%;"><span>DESCRIPTION</span></th>
                                                <th name="th_quantity" class="text-center" style="width:10%;" ><span>QTY</span></th>
                                                <th name="th_priceunit" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}" style="width:10%;"><span>RATE PER UNIT</span></th>
                                                <th name="th_total_without_gst" class="text-center" style="width:15%;"><span>TOTAL WITHOUT GST</span></th>
                                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span>Disc.%</span>
                                                </th>
                                                <th name="th_taxes" t-attf-class="text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>GST RATE</span></th>
                                                <th name="th_amount_gst" class="text-center"><span>GST AMOUNT</span></th>
                                                <th name="th_amount_inc_gst" class="text-center"><span>AMOUNT INC GST</span></th>
                                            </tr>
                                        </thead>
                                        <tbody class="invoice_tbody">
                                            <t t-set="index" t-value="0"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                            <t t-foreach="lines" t-as="line">
                                                <t t-set="index" t-value="index+1"/>
                                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                                    <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                                        <td align="center" name="index"><span><t t-out="index"/></span></td>
                                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                                        <td class="text-end">
                                                            <span t-field="line.quantity"/>
                                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                                        </td>
                                                        <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                            <span class="text-end" t-field="line.price_unit"/>
                                                        </td>
                                                        <!--                                                amount without gst-->
                                                        <td align="right" >
                                                            <span t-field="line.price_subtotal" t-options="{'widget': 'float', 'precision': 2}"/>
                                                        </td>
                                                        <td t-if="display_discount" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                            <span class="text-nowrap" t-field="line.discount" t-options="{'widget': 'float', 'precision': 2}"/>
                                                        </td>
                                                        <td align="right" t-attf-class="text-start {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                            <!--                                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>-->
                                                            <!--                                                    <span t-esc="', '.join(map(lambda x: (x.amount), line.tax_ids))" id="line_tax_ids"/>-->
                                                            <span t-esc="line.tax_id_num"/>
                                                        </td>
                                                        <td align="right">
                                                            <span class="text-nowrap" t-field="line.check_tax" />
                                                        </td>
                                                        <td align="right">
                                                            <span class="text-nowrap" t-field="line.price_total" t-options="{'widget': 'float', 'precision': 2}" />
                                                        </td>

                                                    </t>
                                                    <t t-if="line.display_type == 'line_section'">
                                                        <td colspan="99">
                                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                                        </td>
                                                        <t t-set="current_section" t-value="line"/>
                                                        <t t-set="current_subtotal" t-value="0"/>
                                                    </t>
                                                </tr>

                                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                                    <tr class="is-subtotal text-end">
                                                        <td align="right" colspan="99">
                                                            <strong class="mr16">Subtotal</strong>
                                                            <span
                                                                    t-esc="current_subtotal"
                                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                            />
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </tbody>
                                        <tbody style="border: none;">
                                            <tr class="border-black">
                                                <!--                            <td class="pull-right col-1"></td>-->
                                                <td class="pull-right  text-center col-1 fw-bold" colspan="4" style="font-size:20px; margin-right  :20px;">Total</td>
                                                <!--                            <td class="pull-right col-1"></td>-->
                                                <!--                            <td class="pull-right col-1"></td>-->
                                                <!--                                        <td class="pull-right col-1"></td>-->
                                                <!--                                        <td class="pull-right col-1"></td>-->
                                                <td  align="right" class="pull-right col-1 fw-bold"><span class="text-nowrap" t-field="o.amount_untaxed" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>
                                                <td class="pull-right col-1"></td>
                                                <td align="right" class="pull-right col-1 fw-bold"><span class="text-nowrap" t-field="o.amount_tax" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>
                                                <td align="right" class="pull-right col-1 fw-bold"><span class="text-nowrap" t-field="o.amount_total" t-options="{'widget': 'float', 'precision': 2}"/>
                                                </td>

                                            </tr>
                                            <tr>
                                                <td colspan="8"
                                                    class="text-uppercase text-center fw-bold border-top border-dark">
                                                    <!--                                 <span t-esc="number_to_words(o.amount_total)"/>-->
                                                    <span t-field="o.total_in_words"/>
                                                    <span class="text-capitalize" style="margin-left:0.2em;"><span t-field="o.currency_id.name"/></span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="d-flex flex-row mb-2" style="margin-top:4em;">
                            <div class="p-2">
                                <h5 class="text-uppercase border-top border-dark fw-bold pt-2">For
                                    <t t-if="o.company_id.name == 'Aryan Tech'">
                                        <span>Aryan Technologics Pvt Ltd.</span>
                                    </t>
                                     <t t-if="o.company_id.name == 'Iman Group'">
                                        <span t-field="o.company_id.name"/>
                                    </t>
                                </h5>
                            </div>
                        </div>

