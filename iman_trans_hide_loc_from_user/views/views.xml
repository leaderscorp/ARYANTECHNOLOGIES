<odoo>
    <record id="iman_trans_hide_loc_from_user" model="ir.ui.view">
        <field name="name">iman_trans_hide_loc_from_user</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[1]//field[@name='location_dest_id'][2]" position="attributes">
                <!---->
                <attribute name="domain">
                    [('complete_name', 'like', 'ASW')
                </attribute>
                <!---->
            </xpath>
            <xpath expr="//sheet/group/group[1]//field[@name='location_id'][2]" position="attributes">
                <attribute name="domain">
                    [('complete_name', 'like', 'ASW'), ('user_id', '=', 8)]
                </attribute>
            </xpath>
            <xpath expr="//sheet/group/group[1]//field[@name='location_dest_id'][2]" position="attributes">
                <!---->
                <attribute name="domain">
                    [('complete_name', 'like' , 'WH')]
                </attribute>
                <!---->
            </xpath>
            <xpath expr="//sheet/group/group[1]//field[@name='location_id'][2]" position="attributes">
                <attribute name="domain">
                    [('complete_name', 'like' , 'WH')]
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>