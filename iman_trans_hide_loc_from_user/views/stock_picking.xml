<odoo>
    <data>
        <record id="iman_picking_loc_locations" model="ir.ui.view">
            <field name="name">iman_picking_loc_locations</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <field name="loc_ids" invisible="1"/>
                    <field name="dest_loc_ids" invisible="1"/>
                    <field name="pick_ids" invisible="1"/>
                </xpath>

                <xpath expr="//group/group[1]/field[@name='location_id'][2]" position="attributes">
                   <attribute name="domain">[('id', 'in', loc_ids)]</attribute>
                </xpath>

                <xpath expr="//group/group[1]/field[@name='location_dest_id'][2]" position="attributes">
                    <attribute name="domain">[('id', 'in', dest_loc_ids)]</attribute>
                </xpath>

                <xpath expr="//group/group[1]/field[@name='picking_type_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', pick_ids)]</attribute>
                </xpath>


                <!--Operations-->
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='picking_type_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', parent.pick_ids)]</attribute>
                </xpath>

                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='location_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', parent.loc_ids)]</attribute>
                </xpath>

                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='location_dest_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', parent.dest_loc_ids)]</attribute>
                </xpath>

                <!--Detailed Operation-->
                <!--<xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='location_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', parent.loc_ids)]</attribute>
                </xpath>

                <xpath expr="//field[@name='move_line_ids_without_package']/tree/field[@name='location_dest_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', parent.dest_loc_ids)]</attribute>
                </xpath>-->


            </field>
        </record>
    </data>
</odoo>