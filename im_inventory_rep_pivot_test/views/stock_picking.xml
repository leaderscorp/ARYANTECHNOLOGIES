<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="im_stock_picking_form_view_inherit" model="ir.ui.view">
            <field name="name">im_stock_picking_form_view_inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <!-- ++++++++++++++++++++ -->
                <!-- Other fields  -->
                <!-- ++++++++++++++++++++ -->
                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="so_num" string="SO No"
                           attrs="{'invisible': [('picking_type_id', '!=', 42)]}"/>
                    <field name="mo_num" string="Mo No"
                           attrs="{'invisible': [('picking_type_id', '!=', 42)]}"/>
                </xpath>
            </field>
        </record>


        <!-- Inherit Tree View to Modify it -->
        <record id="im_stock_picking_tree_view_inherit" model="ir.ui.view">
            <field name="name">im_stock_picking_tree_view_inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="so_num" optional="show"/>
                    <field name="mo_num" optional="show"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
