<odoo>
    <data>
        <record model="ir.ui.view" id="im_ji_pivot_report_pivot">
            <field name="name">im_ji_pivot_report</field>
            <field name="model">stock.valuation.layer</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="quantity" type="measure"/>
<!--                    <field name="im_avg_cost" type="measure"/>-->
                    <field name="value" type="measure"/>
                    <field name="im_product_tag_p" type="row"/>
                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="im_ji_pivot_report_window_action">
            <field name="name">im_ji_pivot_report_window_action</field>
            <field name="res_model">stock.valuation.layer</field>
            <field name="view_mode">pivot</field>
            <field name="domain">[('product_id.detailed_type', '=', 'product')]</field>
        </record>
    </data>
</odoo>