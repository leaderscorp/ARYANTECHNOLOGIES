<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="iman_repair_add_inv_field" model="ir.ui.view">
            <field name="name">iman.repair.field</field>
            <field name="model">repair.order</field>
            <field name="inherit_id" ref="repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/group[1]/group[1]/field[@name='picking_id']" position="after">
                    <field name="inv_name"/>
                    <field name="inv_date"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>